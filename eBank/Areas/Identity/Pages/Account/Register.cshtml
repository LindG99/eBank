@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrera konto";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 text-center d-none d-md-block">
            <img src="https://cdn-icons-png.flaticon.com/512/219/219983.png"
                 alt="Register illustration"
                 class="img-fluid rounded shadow-sm"
                 style="max-height: 320px;">
        </div>

        <!-- Register -->
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center text-success mb-4">
                        <i class="fas fa-user-plus me-2"></i> Skapa konto
                    </h2>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="namn@exempel.se" />
                            <label asp-for="Input.Email">E-postadress</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" placeholder="Lösenord" />
                            <label asp-for="Input.Password">Lösenord</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" placeholder="Bekräfta lösenord" />
                            <label asp-for="Input.ConfirmPassword">Bekräfta lösenord</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="w-100 btn btn-success btn-lg shadow-sm mb-3">
                            <i class="fas fa-user-check me-2"></i> Registrera dig
                        </button>

                        <div class="text-center">
                            <p class="mb-1">
                                Har du redan ett konto?
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Logga in här</a>
                            </p>
                        </div>
                    </form>

                    @if (Model.ExternalLogins != null && Model.ExternalLogins.Count > 0)
                    {
                        <hr class="my-4" />
                        <div class="text-center">
                            <p>Registrera med en extern tjänst:</p>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit"
                                            class="btn btn-outline-success btn-lg me-2 mb-2"
                                            name="provider"
                                            value="@provider.Name"
                                            title="Registrera med @provider.DisplayName">
                                        <i class="fab fa-@provider.DisplayName.ToLower() me-2"></i> @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
