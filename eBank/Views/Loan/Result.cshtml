@if (Model.Decision == "Godkänt")
{
    <div class="alert alert-success shadow-sm p-4 rounded-3 d-flex align-items-start">
        <i class="fas fa-check-circle fa-3x me-4 mt-1"></i>
        <div>
            <h4 class="alert-heading mb-2">🎉 Lånet beviljat!</h4>
            <p class="mb-2">
                Ditt lån på <strong>@Model.LoanAmount.ToString("C")</strong> har satts in på ditt konto:
                <strong>@Model.TargetAccountName</strong>.
            </p>
            <p class="mb-0">
                Gå till <a href="/User/UserStart" class="text-decoration-none fw-semibold">din dashboard</a>
                för att se ditt uppdaterade saldo.
            </p>
            <a asp-controller="Loan"
               asp-action="PrintLoanDecision"
               asp-route-loanAmount="@Model.LoanAmount"
               asp-route-decision="@Model.Decision"
               asp-route-probability="@Model.Probability"
               class="btn btn-outline-success mt-3">
                <i class="fas fa-file-pdf me-2"></i> Ladda ner beslut som PDF
            </a>

        </div>
    </div>
}
else
{
    <div class="alert alert-danger shadow-sm p-4 rounded-3 d-flex align-items-start">
        <i class="fas fa-times-circle fa-3x me-4 mt-1"></i>
        <div>
            <h4 class="alert-heading mb-2">❌ Lånet nekades</h4>
            <p class="mb-2">
                Tyvärr uppfylldes inte kriterierna för lånet just nu.<br />
                <strong>Sannolikhet:</strong> @((Model.Probability * 100).ToString("F2")) %
            </p>
            <a href="/Loan/Apply" class="btn btn-outline-light bg-white text-danger border-danger mt-2">
                <i class="fas fa-redo me-2"></i>Försök igen
            </a>
        </div>
    </div>
}

