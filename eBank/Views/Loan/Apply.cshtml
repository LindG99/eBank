@model eBank.Models.LoanApplicationViewModel

@{
    ViewData["Title"] = "Ansök om lån";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white text-center py-4 rounded-top">
            <h2 class="mb-0">
                <i class="fas fa-file-signature me-2"></i>@ViewData["Title"]
            </h2>
        </div>

        <div class="card-body p-4">
            <form asp-controller="Loan" asp-action="Apply" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label asp-for="Income" class="form-label fw-semibold">Inkomst</label>
                        <div class="input-group">
                            <span class="input-group-text">kr</span>
                            <input asp-for="Income" class="form-control" type="number" step="any" placeholder="Ex. 35 000" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Debt" class="form-label fw-semibold">Skuld</label>
                        <div class="input-group">
                            <span class="input-group-text">kr</span>
                            <input asp-for="Debt" class="form-control" type="number" step="any" placeholder="Ex. 120 000" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="CreditScore" class="form-label fw-semibold">Kreditpoäng</label>
                        <input asp-for="CreditScore" class="form-control" type="number" step="1" placeholder="Ex. 750" />
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="EmploymentYears" class="form-label fw-semibold">Antal arbetsår</label>
                        <input asp-for="EmploymentYears" class="form-control" type="number" step="1" placeholder="Ex. 5" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LoanAmount" class="form-label fw-semibold">Önskat lånebelopp</label>
                        <div class="input-group">
                            <span class="input-group-text">kr</span>
                            <input asp-for="LoanAmount" class="form-control" type="number" step="any" placeholder="Ex. 250 000" />
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-5 py-2">
                        <i class="fas fa-paper-plane me-2"></i>Ansök om lån
                    </button>
                </div>
            </form>

            @if (Model.Decision != null)
            {
                <div class="alert @(Model.Decision == "Godkänt" ? "alert-success" : "alert-danger") mt-4 mb-0 shadow-sm">
                    <h5 class="alert-heading">
                        <i class="@(Model.Decision == "Godkänt" ? "fas fa-check-circle" : "fas fa-times-circle") me-2"></i>
                        Beslut: @Model.Decision
                    </h5>
                    <p class="mb-0">
                        <strong>Sannolikhet:</strong> @((Model.Probability * 100).ToString("F2")) %
                    </p>
                </div>
            }
        </div>
    </div>
</div>

