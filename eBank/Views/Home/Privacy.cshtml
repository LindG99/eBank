@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Integritetspolicy";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white text-center py-4 rounded-top">
            <h1 class="mb-0"><i class="fas fa-user-shield me-2"></i>@ViewData["Title"]</h1>
        </div>

        <div class="card-body p-4">
            <p class="lead">
                @Localizer["WeOn"] <strong>eBank</strong> @Localizer["LeadDesc"]
            </p>

            <hr />

            <h3><i class="fas fa-database me-2 text-success"></i> @Localizer["Information"]</h3>
            <p>@Localizer["WeInfo"]</p>
            <ul>
                <li>@Localizer["Identity"]</li>
                <li>@Localizer["Finans"]</li>
                <li>>@Localizer["TechInfo"]</li>
            </ul>

            <h3 class="mt-4"><i class="fas fa-lock me-2 text-success"></i> @Localizer["MngInfo"]</h3>
            <p>@Localizer["UseFor"]</p>
            <ul>
                <li>@Localizer["MngAcc"]</li>
                <li>@Localizer["VerifyAcc"]</li>
                <li>@Localizer["LegarRec"]</li>
                <li>@Localizer["SecureLogin"]</li>
            </ul>

            <h3 class="mt-4"><i class="fas fa-user-secret me-2 text-success"></i> @Localizer["ShareInfo"]</h3>
            <p>
                @Localizer["NeverSell"]
            </p>

            <h3 class="mt-4">
                <i class="fas fa-shield-alt me-2 text-success"></i>@Localizer["Safty"] </h3>
            <p>
                @Localizer["Adva"]
            </p>

            <h3 class="mt-4"><i class="fas fa-user-check me-2 text-success"></i> @Localizer["YourRights"]</h3>
            <p>@Localizer["RightTo"]</p>
            <ul>
                <li>@Localizer["Fraud"]</li>
                <li>@Localizer["IncorrectInfo"]</li>
                <li>@Localizer["Cerain"]</li>
                <li>@Localizer["Complaint"]</li>
            </ul>

            <h3 class="mt-4"><i class="fas fa-envelope me-2 text-success"></i> @Localizer["Kontakt"]</h3>
            <p>
                @Localizer["Questions"]
            </p>
            <p class="mb-0">
                <strong>eBank AB</strong><br />
                Kundservice: <a href="mailto:integritet@dinbank.se">integritet@ebank.se</a><br />
                Telefon: 08-123 456 78<br />
                Adress: Bankgatan 1, 111 22 Stockholm
            </p>
        </div>

        <div class="card-footer text-center text-muted small">
            <i class="fas fa-clock me-1"></i> Senast uppdaterad: @DateTime.Now.ToString("MMMM yyyy", new System.Globalization.CultureInfo("sv-SE"))
        </div>
    </div>
</div>
